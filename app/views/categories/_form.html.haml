%require_tree
= form_with model: @category, local: true do |form|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited
        this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  %p
    = form.label :name
    %br/
    = form.text_field :name
  %p
    = form.submit
