- if user_signed_in?
  %span
    Здравствуйте, #{current_user.email}
  = link_to 'Выйти', destroy_user_session_path, :method => :delete
- else
  = link_to 'Войти', new_user_session_path
  или #{link_to 'Зарегистрироваться', new_user_registration_path}

%h1 Listing categories
%table
  %tr
    %th Category
    %th
  - @categories.each do |category|
    %tr
      %td= link_to category.name, category_path(category)
= link_to 'Show all images', category_images_path(@categories.all)
