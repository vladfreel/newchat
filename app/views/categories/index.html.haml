%require_tree
%div.auth
  - if user_signed_in?
    %span
      Здравствуйте,
    %span.u_name
      #{current_user.email}
      %br
    = link_to 'Выйти', destroy_user_session_path, :method => :delete
  - else

    = link_to 'Войти', new_user_session_path

    или #{link_to 'Зарегистрироваться', new_user_registration_path}



.buttons
  .dropdown
    %button#dLabel{"data-target" => "#", "data-toggle" => "dropdown", :href => "/page.html", :role => "button" , class: "btn btn-primary btn-lg"}  Категории
    %span.caret
    %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
      - @categories.each do |category|
        = button_to category.name, category_path(category),  class: "btn btn-primary btn-lg",:method => :get
      = button_to "New category", new_category_path,  class: "btn btn-success btn-lg",:method => :get
  .but1
    = button_to 'Все картинки', images_index_path,  class: "btn btn-primary btn-lg",:method => :get
  .but2
    = button_to 'Все комментарии', comments_index_path,  class: "btn btn-primary btn-lg",:method => :get


