%require_tree
%div.main
  %div.first
    = render "auth"
    %div.lang
      = link_to "Рус", {locale: :ru}, class: "btn btn-danger btn"
      = link_to "En", {locale: :en}, class: "btn btn-danger btn"
  %div.second
    %h1
      = t(".allcomm")

    %div.grid4
      - @comments.each do |comm|
        %div.com
          %div
            - if comm.image.path.nil?
              %img{:src => "#{comm.image.img}", :class => "images"}/
            - else
              %img{:src => "/#{comm.image.path}", :class => "images"}/
          %div
            %strong Пользователь:
            = comm.user.email
          %div
            %strong Заголовок:
            = comm.com_email
          %div
            %strong Текст:
            = comm.body
    = paginate @comments
    %br
    = link_to t(".back"), categories_path,  class: "btn btn-danger btn-lg"
