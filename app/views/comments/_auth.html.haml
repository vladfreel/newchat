%div.auth
  - if user_signed_in?
    %span.u_name
      #{current_user.email}
      %br
      = image_tag(current_user.avatar.url, class: "avatar")
      %br
      %br
      = link_to t(".auth"), edit_user_registration_path, class: "btnnn", data_toggle: "tooltip", dataplacement: "bottom", title:"Your office"
      %br
      %br
    = link_to t(".exitauth"), destroy_user_session_path,:controller => :my_sessions, :method => :delete, class: "btnnn2"
  - else

    = link_to t(".enterauth"), new_user_session_path

    или #{link_to t(".reg"), new_user_registration_path}
