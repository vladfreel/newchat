%require_tree
%div.main
  %div.first
    = render "auth"
    %div.lang
      = link_to "Ru", {locale: :ru}, class: "buttlist", data_toggle: "tooltip", dataplacement: "bottom", title:"change language to Russian"
      = link_to "En", {locale: :en}, class: "buttlist", data_toggle: "tooltip", dataplacement: "bottom", title:"change language to English"

  %div.third
    %h2
      %span.u_name
        #{current_user.email}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .field
        = f.label t(".mail")
        %br/
        = f.email_field :email, autofocus: true
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field
        = f.label t(".password")
        %br/
        = f.password_field :password, autocomplete: "off"
      .field
        = f.label t(".passwordacc")
        %br/
        = f.password_field :password_confirmation, autocomplete: "off"
      .field
        = f.label t(".passwordcur")
        %br/
        = f.password_field :current_password, autocomplete: "off"
      %br
      .field
        - if current_user.avatar.url.present?
          = image_tag(current_user.avatar.url)
          = f.label :remove_avatar do
            = f.check_box :remove_avatar
        = f.file_field :avatar
        = f.hidden_field :avatar_cache
      %br
      .actions
        %br
        = f.submit t(".upd"), class: "buttlist", data: { confirm: "Are you sure?" }
    %p
      #{button_to t(".deleteuser"), registration_path(resource_name), class: "buttlist", data: { confirm: "Are you sure?" }, method: :delete}
    = link_to "Back", categories_path, class: "buttlist"
    = link_to t(".exitauth"), destroy_user_session_path, :method => :delete, class: "buttlist"
