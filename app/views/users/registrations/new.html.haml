
= form_for(resource, as: resource_name, url: registration_path(resource_name), :multipart => true,:html => { :id => "login" }) do |f|
  = devise_error_messages!
  %h1
    = t(".reg")
  %fieldset#inputs
    = f.email_field :email, autofocus: true,:html => { :id => "username" }, :placeholder => t(".login"), :required => "", :type => "text"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    - if f.object.password_required?
      = f.password_field :password,:html => { :id => "password" }, autocomplete: "off",:placeholder => t(".pass"), :required => "", :type => "password"
      = f.password_field :password_confirmation,:html => { :id => "password" }, autocomplete: "off",:placeholder => t(".retpass"), :required => "", :type => "password"
    = f.label :avatar do
      = f.file_field :avatar
      = f.hidden_field :avatar_cache
    = link_to "Upgrade Access", user_twitter_omniauth_authorize_path
  %fieldset#actions
    = f.submit t(".reglogin"),:class => "buttlist"
  %div.langent
    = link_to "Ru", {locale: :ru}, class: "buttlist", data_toggle: "tooltip", dataplacement: "bottom", title:"change language to Russian"
    = link_to "En", {locale: :en}, class: "buttlist", data_toggle: "tooltip", dataplacement: "bottom", title:"change language to English"





