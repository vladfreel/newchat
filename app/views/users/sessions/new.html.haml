= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {method: :post, :id => "login" }) do |f|
  %h1
    = t(".enter")
  %fieldset#inputs
    = f.email_field :email,:html => { :id => "username" },:autofocus => "", :placeholder => t(".login"), :required => "", :type => "text"
    = f.password_field :password,:html => { :id => "password" }, autocomplete: "off",:placeholder => t(".pass"), :required => "", :type => "password"
  %fieldset#actions
    = f.submit t(".submitlogin"),:class => "buttlist"
    %br

    - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
      = link_to t(".forgotpass"), new_password_path(resource_name)
    - if devise_mapping.registerable? && controller_name != 'registrations'
      = link_to t(".registration"), new_registration_path(resource_name)
    %br
    - if devise_mapping.confirmable? && controller_name != 'confirmations'
      = link_to t(".confirm"), new_confirmation_path(resource_name)
    %br
    - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
      = link_to t(".unlock"), new_unlock_path(resource_name)

  = link_to ("<span class='fa fa-twitter'> Sign in with Twitter</span>".html_safe), user_twitter_omniauth_authorize_path,  class: "btn btn-block btn-social btn-twitter"

  %div.langent
    = link_to "Ru", {locale: :ru}, class: "buttlist", data_toggle: "tooltip", dataplacement: "bottom", title:"change language to Russian"
    = link_to "En", {locale: :en}, class: "buttlist", data_toggle: "tooltip", dataplacement: "bottom", title:"change language to English"
- if User.find_by_email(resource.email)
  - if User.find_by_email(resource.email).failed_attempts > User.logins_before_captcha
    = recaptcha_tags
